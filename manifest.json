{
  "manifest_version": 3,
  "name": "Darija Translator",
  "version": "1.0",
  "description": "Click-to-translate Darija messages in Instagram DMs, Facebook Messenger, and Messenger",
  "permissions": ["storage"],
  "host_permissions": [
    "*://instagram.com/*",
    "*://www.instagram.com/*", 
    "*://facebook.com/*",
    "*://www.facebook.com/*",
    "*://web.facebook.com/*",
    "*://m.facebook.com/*",
    "*://messenger.com/*",
    "*://www.messenger.com/*",
    "*://m.messenger.com/*",
    "https://openrouter.ai/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [{
    "matches": [
      "*://instagram.com/direct/*",
      "*://www.instagram.com/direct/*",
      "*://facebook.com/messages/*",
      "*://www.facebook.com/messages/*",
      "*://web.facebook.com/messages/*",
      "*://m.facebook.com/messages/*",
      "*://messenger.com/*",
      "*://www.messenger.com/*",
      "*://m.messenger.com/*"
    ],
    "js": [
      "config.js",
      "selectors.js", 
      "api.js",
      "translation.js",
      "ui.js",
      "main.js"
    ],
    "run_at": "document_idle"
  }],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Configure Darija Translator",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  }
}
